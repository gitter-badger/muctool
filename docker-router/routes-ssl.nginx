# http://domain redirects to https://domain
server {
    listen 80;
    listen [::]:80;
    server_name muctool.loxal.net;

    include /etc/nginx/snippets/letsencrypt.conf;

    #        location / {
    #        return 301 https://muctool.loxal.net:1443;
    #        }

    location / {
        proxy_pass https://muctool.loxal.net:1443;
    }
}

## http://www.domain redirects to https://www.domain
