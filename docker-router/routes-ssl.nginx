#
# https://domain redirects to https://www.domain
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name muctool.loxal.net;

    ssl_certificate /etc/letsencrypt/live/muctool.loxal.net/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/muctool.loxal.net/privkey.pem;
    ssl_trusted_certificate /etc/letsencrypt/live/muctool.loxal.net/fullchain.pem;
    include /etc/nginx/snippets/ssl.conf;

    location / {
        proxy_pass https://muctool.loxal.net:1443$request_uri;
    }
}
